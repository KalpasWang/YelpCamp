<% include ../partials/header %>

<div class="container">
	<div class="row new-camp">
		<h1>編輯留言</h1>
		<div class="new-camp-form">
			<form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<textarea class="form-control" rows="5" name="comment[text]"><%= comment.text %></textarea>
				</div>
				<div class="form-group">
					<input class="btn btn-lg btn-primary btn-block" type="submit" value="送出">
				</div>
			</form>
			<a href="/campgrounds" class="btn btn-default">返回</a>
		</div>
	</div>
</div>

<% include ../partials/footer %>