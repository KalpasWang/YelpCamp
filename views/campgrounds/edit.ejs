<% include ../partials/header %>

<div class="container">
	<div class="row new-camp">
		<h1>編輯「<%= camp.name %>」資訊</h1>
		<div class="new-camp-form">
			<form action="/campgrounds/<%= camp._id %>?_method=put" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="campground[name]" value="<%= camp.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="campground[img]" value="<%= camp.img %>">
				</div>
				<div class="form-group">
					<textarea class="form-control" rows="5" name="campground[description]"><%= camp.description %></textarea>
				</div>
				<div class="form-group">
					<input class="btn btn-lg btn-primary btn-block" type="submit" value="送出">
				</div>
			</form>
			<a href="/campgrounds" class="btn btn-default">返回</a>
		</div>
	</div>
</div>

<% include ../partials/footer %>