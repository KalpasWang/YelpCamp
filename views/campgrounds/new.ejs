<% include ../partials/header %>

<div class="container">
	<div class="row new-camp">
		<h1>新增一個主題營區</h1>
		<div class="new-camp-form">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="營區名稱">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="img" placeholder="營區照片網址">
				</div>
				<div class="form-group">
					<textarea class="form-control" rows="5" name="description" placeholder="營區描述"></textarea>
				</div>
				<div class="form-group">
					<input class="btn btn-lg btn-primary btn-block" type="submit" value="送出">
				</div>
			</form>
			<a href="/campgrounds" class="btn btn-default">返回</a>
		</div>
	</div>
</div>

<% include ../partials/footer %>