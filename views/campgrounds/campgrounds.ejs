<% include ../partials/header %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>主題營區</h1>
			<p>查看全台灣各地的主題營區</p>
			<p>
				<a href="/campgrounds/new" class="btn btn-lg btn-primary">新增營地</a>
			</p>
		</div>
	</header>
	
	<div class="row text-center allcamps">
		<% campgrounds.forEach((camp) => { %>
			<div class="col-lg-3 col-md-6">
				<div class="thumbnail">
      				<img src="<%= camp.img %>" alt="<%= camp.name %>">
      				<div class="caption">
        				<h3><%= camp.name %></h3>
						<p><a href="<%= '/campgrounds/' + camp.id %>" class="btn btn-primary" role="button">了解更多</a></p>
      				</div>
    			</div>
			</div>
		<% }); %>
	</div>
</div>

<% include ../partials/footer %>